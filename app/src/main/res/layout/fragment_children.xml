                        android:layout_marginBottom="@dimen/person_info_vertical_margin"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="end"
                        android:textColor="@color/colorBlack87"
                        android:textSize="18sp" />

                </LinearLayout>

